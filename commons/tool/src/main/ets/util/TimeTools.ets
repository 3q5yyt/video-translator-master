/** * 数字补零 */export function fillNum(num: number): string {  return num < 10 ? `0${num}` : num.toString();}/** * 视频时长转换（毫秒 -> mm:ss / hh:mm:ss） * @param time 视频时长，单位：毫秒 */export function getTimeString(time: number | undefined): string {  if (time === -1 || time === undefined) {    time = 0;  }  const TIMESTAMP: number = 1000; // 毫秒 -> 秒  const TIME_UNIT: number = 60; // 1 分钟 = 60 秒  const MAX_HOURS: number = 24; // 最长显示 24 小时  let hour: number =    Math.floor(time % (TIMESTAMP * TIME_UNIT * TIME_UNIT * MAX_HOURS) / (TIMESTAMP * TIME_UNIT * TIME_UNIT));  let minute: number = Math.floor(time % (TIMESTAMP * TIME_UNIT * TIME_UNIT) / (TIMESTAMP * TIME_UNIT));  let second: number = Math.floor(time % (TIMESTAMP * TIME_UNIT) / TIMESTAMP);  if (hour > 0) {    return `${fillNum(hour)}:${fillNum(minute)}:${fillNum(second)}`;  }  return `${fillNum(minute)}:${fillNum(second)}`;}